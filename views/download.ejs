<%- include('partials/header'); %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-6 center">
      <h1><i class="fas fa-file-csv"></i></h1>
      <h1>Biraz veri alır mıydınız?</h1>

      <form class="" action="/download" method="post">

        <div class="input-group">
          <input id="startDate" class="form-control" type="date" name="startDate" placeholder="Başlangıç tarihi">
          <input id="endDate" class="form-control" type="date" name="endDate" placeholder="Bitiş tarihi" min="">

        </div>
        <div class="form-group">
          <select class="form-control" name="apiSource">
            <option selected>Bir kaynak site seç.</option>
            <option value="accuweather">Accuweather</option>
            <option value="">Yapılacak</option>
          </select>

          <select class="form-control" name="cityName">
            <option selected>Bir şehir seç.</option>
            <option value="istanbul">İstanbul</option>
            <option value="ankara">Ankara</option>
          </select>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block btn-color" type="submit" name="button">CSV Dosyası Kaydet</button>
        </div>
      </form>

    </div>
  </div>
</div>

<%- include('partials/footer'); %>
